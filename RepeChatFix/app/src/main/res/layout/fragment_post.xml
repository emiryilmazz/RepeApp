<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ProfilFragmentBgColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.PostFragment">

    <TextView
        android:layout_width="wrap_content"
        android:text="Post Paylaş"
        android:textStyle="bold"
        android:textColor="@color/ProfilFragmentTextColor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="253dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/post_fragment_imgPost"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/post_add_image"
            app:civ_border_color="@color/ProfilFragmentCivColor"
            app:civ_border_width="3dp" />


        <ImageView
            android:id="@+id/post_fragment_imgYeniResim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/post_fragment_imgPost"
            android:layout_alignBottom="@+id/post_fragment_imgPost"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_camera" />

    </RelativeLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:background="@drawable/profil_edit_bg"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="Açıklama"
        android:textColor="#FFFFFF"
        android:layout_marginRight="25dp"
        android:id="@+id/post_fragment_editComment"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/post_fragment_shareComment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:text="Paylaş"
        android:background="@drawable/dark_button"

        >


    </Button>

</LinearLayout>