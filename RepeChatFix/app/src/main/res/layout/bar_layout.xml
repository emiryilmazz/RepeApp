<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/toolbar"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bar_layout_sharePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_image" />

    <TextView
        android:layout_width="wrap_content"
        android:text="RepeApp"
        android:textColor="@color/BarTextColor"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:fontFamily="@font/bauhs93"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/bar_layout_relaNotif"
        android:layout_gravity="end"

        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/bar_layout_imgNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notif" />
        <TextView
            android:id="@+id/bar_layout_txtBildirimSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/bar_layout_imgNotif"
            android:layout_alignBottom="@+id/bar_layout_imgNotif"
            android:layout_marginRight="5dp"
            android:textColor="#FF0000"

            android:textSize="17sp" />





    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>